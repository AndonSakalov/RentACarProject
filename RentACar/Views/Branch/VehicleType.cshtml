@model IEnumerable<RentACar.Web.ViewModels.VehicleTypeViewModel>;
@{
    ViewData["Title"] = $"Available vehicle types for this branch";
}
<head>
    <link rel="stylesheet" href="~/css/site.css">
</head>
<div class="h2-branches-index">
    <h2 class="found-branches-title">@ViewData["Title"]</h2>
</div>

<div class="branches-index-wrapper">
    @foreach (var branch in Model)
    {
        <div class="col-md-3 mb-4 ms-auto me-auto">
            <div class="card h-100 bg-bluegradient" style="width: 100%;">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@branch.Name</h5>
                    <img src="@branch.ImageUrl"/>
                    <div class="d-flex justify-content-between mt-auto">
                        <button type="submit" class="search-button">Select</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>