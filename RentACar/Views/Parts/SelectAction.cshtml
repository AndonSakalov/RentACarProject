@{
	ViewData["Title"] = "Actions for vehicle parts";
}
<head>
	<link rel="stylesheet" href="~/css/site.css">
</head>
<div class="header">
	<h1 class="found-branches-title">@ViewData["Title"]</h1>
</div>

@if (TempData["Message"] != null)
{
	string messageType = TempData["MessageType"]?.ToString();
	string alertClass = messageType == "Success" ? "alert-success" : "alert-danger"; // Bootstrap classes
	<div id="messageBox" class="alert @alertClass" role="alert">
		@TempData["Message"]
	</div>
}

<script>
	document.addEventListener("DOMContentLoaded", function () {
		const messageBox = document.getElementById("messageBox");
		if (messageBox) {
			setTimeout(() => {
				messageBox.style.transition = "opacity 1s ease-out";
				messageBox.style.opacity = "0";
				setTimeout(() => messageBox.remove(), 1000);
			}, 3000);
		}
	});
</script>

<div class="container">
    <div class="row g-3">
        <div class="col-md-6">
            <form asp-action="CreateEngine" asp-controller="Parts" method="get" class="h-100">
                <div class="card h-100 bg-bluegradient">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title d-flex justify-content-center">Create engine</h5>
                        <div class="d-flex justify-content-between mt-auto">
                            <button type="submit" class="btn btn-info w-100">Visit</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-6">
            <form asp-action="GetAllEngines" asp-controller="Parts" method="get" class="h-100">
                <div class="card h-100 bg-bluegradient">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title d-flex justify-content-center">Delete engine</h5>
                        <div class="d-flex justify-content-between mt-auto">
                            <button type="submit" class="btn btn-info w-100">Visit</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <div class="col-md-6">
            <form asp-action="CreateMake" asp-controller="Parts" method="get" class="h-100">
                <div class="card h-100 bg-bluegradient">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title d-flex justify-content-center">Create make</h5>
                        <div class="d-flex justify-content-between mt-auto">
                            <button type="submit" class="btn btn-info w-100">Visit</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-6">
            <form asp-action="GetAllEngines" asp-controller="Parts" method="get" class="h-100">
                <div class="card h-100 bg-bluegradient">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title d-flex justify-content-center">Delete make</h5>
                        <div class="d-flex justify-content-between mt-auto">
                            <button type="submit" class="btn btn-info w-100">Visit</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>