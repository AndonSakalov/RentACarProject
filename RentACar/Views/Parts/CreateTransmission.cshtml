@model RentACar.Web.ViewModels.Parts.CreateTransmissionViewModel
@{
	ViewData["Title"] = "Create Transmission";
}

<div class="header">
	<h1 class="found-branches-title">@ViewData["Title"]</h1>
</div>

<form method="post" asp-controller="Parts" asp-action="CreateTransmission">
	<div class="row" id="add-vehicle">
		<div class="col-sm-6 mb-2">
			<label asp-for="TransmissionType" class="form-label-add-edit">Select transmission type</label>
			<select asp-for="TransmissionType" class="form-control" aria-required="true" asp-items="ViewBag.TransmissionTypes">
				<option value="">Select transmission type...</option>
			</select>
			<span asp-validation-for="TransmissionType" class="text-danger"></span>
		</div>

		<div class="col-sm-6 mb-2">
			<label asp-for="@Model.GearsCount" class="form-label-add-edit">Select gears count...</label>
			<input asp-for="GearsCount" class="form-control" placeholder="Gears count..." />
			<span asp-validation-for="@Model.GearsCount" class="text-danger"></span>
		</div>

		<div class="mb-2">
			<input class="btn btn-warning btn-dark-text w-100 py-2 fw-bold rounded" type="submit" value="Create Engine" />
		</div>
	</div>
</form>
